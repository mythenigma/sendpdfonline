---
interface Props {
    title: string;
    excerpt: string;
    date: string;
    author: string;
    image: string;
    slug: string;
    category?: string;
}

const { title, excerpt, date, author, image, slug, category } = Astro.props;
---

<article class="blog-post-card">
    {category && <div class="category-badge">{category}</div>}
    <div class="image-container">
        <img src={image} alt={title} />
    </div>
    <div class="content">
        <div class="meta">
            <span class="date">{date}</span>
            <span class="author">by {author}</span>
        </div>
        <h3>{title}</h3>
        <p>{excerpt}</p>
        <a href={`/blog/${slug}`} class="read-more">Read More</a>
    </div>
</article>

<style>
    .blog-post-card {
        background-color: var(--background-color);
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        position: relative;
    }

    .blog-post-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .category-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background-color: var(--primary-color);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: bold;
        z-index: 1;
    }

    .image-container {
        position: relative;
        padding-top: 56.25%; /* 16:9 aspect ratio */
        overflow: hidden;
    }

    .image-container img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .content {
        padding: 1.5rem;
    }

    .meta {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
        color: var(--light-text);
        font-size: 0.875rem;
    }

    .content h3 {
        margin-bottom: 1rem;
        color: var(--text-color);
    }

    .content p {
        color: var(--light-text);
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .read-more {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: bold;
        display: inline-block;
    }

    .read-more:hover {
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        .blog-post-card {
            margin-bottom: 2rem;
        }
    }
</style> 