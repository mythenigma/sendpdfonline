---
interface Props {
    title: string;
    items: string[];
}

const { title, items } = Astro.props;
---

<div class="tip-box">
    <h3>{title}</h3>
    <ul>
        {items.map((item) => (
            <li>{item}</li>
        ))}
    </ul>
</div>

<style>
    .tip-box {
        background-color: #fef2e8;
        padding: 1.5rem;
        border-radius: 5px;
        margin: 1.5rem 0;
        border-left: 4px solid var(--warning-color);
    }

    .tip-box h3 {
        color: var(--text-color);
        margin-bottom: 1rem;
    }

    .tip-box ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .tip-box li {
        color: var(--light-text);
        margin-bottom: 0.5rem;
        padding-left: 1.5rem;
        position: relative;
    }

    .tip-box li::before {
        content: "â€¢";
        color: var(--warning-color);
        position: absolute;
        left: 0;
    }
</style> 