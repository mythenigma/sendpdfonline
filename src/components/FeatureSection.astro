---
interface Props {
    title: string;
    description?: string;
    features: Array<{
        title: string;
        items: string[];
    }>;
}

const { title, description, features } = Astro.props;
---

<section class="feature-section">
    <h2>{title}</h2>
    {description && <p>{description}</p>}
    
    <div class="feature-grid">
        {features.map((feature) => (
            <div class="feature-item">
                <h3>{feature.title}</h3>
                <ul>
                    {feature.items.map((item) => (
                        <li>{item}</li>
                    ))}
                </ul>
            </div>
        ))}
    </div>
</section>

<style>
    .feature-section {
        margin: 2rem 0;
    }

    .feature-section h2 {
        color: var(--text-color);
        margin-bottom: 1rem;
    }

    .feature-section p {
        color: var(--light-text);
        margin-bottom: 1.5rem;
    }

    .feature-item h3 {
        color: var(--text-color);
        margin-bottom: 1rem;
    }

    .feature-item ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .feature-item li {
        color: var(--light-text);
        margin-bottom: 0.5rem;
        padding-left: 1.5rem;
        position: relative;
    }

    .feature-item li::before {
        content: "â€¢";
        color: var(--primary-color);
        position: absolute;
        left: 0;
    }
</style> 